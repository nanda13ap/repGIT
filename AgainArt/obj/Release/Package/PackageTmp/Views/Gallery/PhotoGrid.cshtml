@model AgainArt.Models.Gallery
@using AgainArt.Models

<!-- Photo grid Category -->
<div class="w3-content w3-padding-large w3-margin-top">
    <div class="w3-row-padding w3-padding-16 w3-center">
        @if (Model != null && (Model.LstArtWorkCategory != null))
        {
            foreach (var item in Model.LstArtWorkCategory)
            {
                if (item != null)
                {
                    <div class="w3-quarter">
                        <img src=@Url.Content(item.FileURL) style="width:100%; height:100%; cursor: pointer !important; opacity: 0.8 !important" onclick="getImages(this, '@item.PaintingEnum.GetDisplayName()')" alt="@item.Description" class="@item.PaintingEnum.ToString().Replace(" ","")" />
                        <h4>
                            @Html.DisplayName(item.PaintingEnum.GetDisplayName())
                        </h4>
                    </div>
                }
            }
        }
    </div>
</div>

<div class="w3-content w3-padding-large w3-margin-top" id="divAllImages">
    <div class="w3-image w3-row wchild">
        <hr />
        <hr />
        <hr />
        <div id="selectedCategory"></div>
        <hr />
        @if (Model != null && (Model.LstArtWork != null))
        {
            foreach (var item in Model.LstArtWork)
            {
                if (item != null)
                {
                    <div class="childImage @item.PaintingEnum.ToString().Replace(" ","")" style="display:none; margin:2%; width:auto">

                        <img src=@Url.Content(item.FileURL) style="width:100%" onclick="onClick(this)" alt="@item.Description" />
                        <p style="padding-top:2%; font-family:Merriweather; font-weight:bold; padding-bottom:4% ; font-style:italic">
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                    </div>
                }
            }
        }
    </div>
</div>
<!-- Photo grid -->
<!-- Modal for full size images on click-->
<div id="modal01" class="w3-modal w3-black" style="padding-top:0" onclick="this.style.display='none'">
    <span class="w3-button w3-black w3-xlarge w3-display-topright">×</span>
    <div class="w3-modal-content w3-animate-zoom w3-center w3-transparent w3-padding-64">
        <img id="img01" class="w3-image">
        <p id="caption"></p>
    </div>
</div>
